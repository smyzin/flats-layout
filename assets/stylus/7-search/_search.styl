.amenities
	display: block
	// width: 190px
	float: left
	padding: 35px 25px

.notClickable
	padding: 0 !important

.searchBox
	display: block
	position: relative
	width: 750px
	float: right
	padding-top: 35px
	&__input
		display: block
		width: 725px
		height: 38px
		font-size: 13px
		font-family: "Open Sans"
		color: rgb(40, 55, 62)
		line-height: 1.846
		padding: 10px 0 10px 40px
		border: 1px solid rgb(225, 230, 232)
		border-radius: 4px
		background-image: url('../img/searchIcon.png')
		background-color: white
		background-position: 10px 10px
		background-repeat: no-repeat
		box-shadow: 0px 1px 17.64px 3.36px rgba(0, 0, 0, 0.07)
		margin: 0 auto
		text-overflow: ellipsis
		&[type="text"]
			border: 1px solid rgb(225, 230, 232)
			border-radius: 4px
			background-color: rgb(255, 255, 255)
			box-shadow: 0px 1px 17.64px 3.36px rgba(0, 0, 0, 0.07)
	&__title
		display: block
		width: 725px
		margin: 0 auto
		font-size: 13px
		font-family: "Open Sans"
		color: rgb(103, 128, 141)
		line-height: 1.846

.facilitie
	display: block
	position: relative
	float: right
	width: 750px
	margin: 0 auto
	&__items
		display: block
		position: inherit
		width: 736px
		margin: 0 auto
	&__sep
		opacity: 0.3
		width: 80%
		background: #eff3f5
.items
	display: block
	&__title
		display: block
		padding: 25px 10px 13px
		font-size: 13px
		font-family: "Open Sans"
		vertical-align: middle
		color: rgb(103, 128, 141)
		line-height: 1.846
		text-decoration: none
		& img
			vertical-align: middle
			margin-right: 10px
	&__block
		position: relative
		display: inline-block
		margin-bottom: 5px
		& input[type="checkbox"].items__block_checkbox
			position: absolute
			z-index: -1000
			left: -1000px
			overflow:  hidden
			clip:  rect(0 0 0 0)
			height: 1px
			width: 1px
			margin: -1px
			padding: 0
			border: 0
		& input[type=checkbox].items__block_checkbox + label.items__block_label
			padding-left: 35px
			height: 20px
			display: inline-block
			margin: 10px 10px
			background-repeat: no-repeat
			background-position:  0 0
			vertical-align: middle
			cursor: pointer
		& input[type=checkbox].items__block_checkbox:checked + label.items__block_label
			background-position: 0 -20px
		& label.items__block_label
			background-image: url(../img/checkbox.png)
			-webkit-touch-callout: none
			-webkit-user-select: none
			-khtml-user-select: none
			-moz-user-select: none
			-ms-user-select: none
			user-select: none
		&_label
			display: inline-block
			width: 145px !important
			font-size: 13px
			font-family: "Open Sans"
			color: rgb(40, 55, 62) !important
			line-height: 1.846
			margin-right: 40px !important
			cursor: pointer !important

.checked
	background: url('../img/checked.png') 0 0 no-repeat !important


